{
  "include": [
    "**/*"
  ],
  "exclude": ["test.ts", "tests", "contracts", "build", "node_modules"],
  "compilerOptions": {
    "skipLibCheck": true,
    "strict": false,
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "build",
    "rootDir": "./",
    "baseUrl": "./",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "paths": {
      "App/*": ["./app/*"],
      "Config/*": ["./config/*"],
      "Contracts/*": ["./contracts/*"],
      "Database/*": ["./database/*"],
      "@/*": ["app/*"],
      "@ioc/*": ["node_modules/@adonisjs/*"]
    },
    "types": [
      "@adonisjs/core",
      "@adonisjs/repl",
      "@adonisjs/session",
      "@adonisjs/view",
      "@adonisjs/shield"
    ]
  }
}